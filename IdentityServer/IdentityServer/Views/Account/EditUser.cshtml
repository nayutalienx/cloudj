@model IdentityServer.Objects.EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>

<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Local edit</h3>
        </div>
        <div class="panel-body">

            <form asp-route="EditUser">

                <fieldset>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input class="form-control" value="@Model.Username" placeholder="Username" asp-for="Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input class="form-control" placeholder="Email" value="@Model.Email" asp-for="Email" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input class="form-control" placeholder="Email" value="@Model.PhoneNumber" asp-for="PhoneNumber" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input type="password" class="form-control" @Model.Password placeholder="New Password" asp-for="Password" autocomplete="off">
                    </div>

                    <div class="form-group">
                        <label asp-for="UserRoles">Roles</label>
                        <select multiple class="form-control" id="UserRoles" name="UserRoles" asp-for="UserRoles">
                            @foreach (var role in Model.AllRoles)
                            {
                                @if (Model.UserRoles.Contains(role))
                                {
                                    <option value="@role" selected>@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary" name="button" value="register">Update</button>
                        <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>



@if (ViewBag.Edited != null) {
    @Html.Raw("Edited!");
}

