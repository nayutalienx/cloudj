@model IdentityServer.Objects.RoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>CreateRole</h1>

<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Local register</h3>
        </div>
        <div class="panel-body">

            <form asp-route="CreateRole">

                <fieldset>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" placeholder="Role" asp-for="Name" autofocus>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" name="button" value="register">Add</button>
                        <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
