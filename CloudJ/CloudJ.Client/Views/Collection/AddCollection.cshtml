
@{
    ViewData["Title"] = "AddCollection";
}

@model CloudJ.Client.Models.NewCollectionModel

    <form method="post" asp-controller="Collection" asp-action="AddCollection" enctype="multipart/form-data">
        <section class="intro intro__marg">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <p class="add-sel-title">Добавление подборки</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5">

                        <fieldset>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Название</label>
                                <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Введите название плана">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Слоган</label>
                                <input asp-for="Preview" type="text" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Введите название плана">
                            </div>
                        </fieldset>

                    </div>
                    <div class="col-lg-12">


                        <fieldset>
                            <div class="form-group">
                                <label for="exampleTextarea">Содержание</label>
                                <textarea asp-for="Description" class="form-control" id="exampleTextarea" rows="10"
                                          style="overflow-y: scroll;"></textarea>
                            </div>


                            <div class="form-group">



                                <label for="prew">Лагатип</label>
                                <input asp-for="PhotoPreview" type="file" id="prew" value="" />



                            </div>



                            <button type="submit" class="btn btn-primary rounded-0" style="width: 100%;">Добавить</button>

                        </fieldset>

                    </div>
                   
                </div>
            </div>
        </section>
    </form>