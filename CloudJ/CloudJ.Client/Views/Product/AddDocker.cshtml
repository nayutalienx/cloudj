
@{
    ViewData["Title"] = "AddDocker";
}

    <section class="intro intro__marg">
        <div class="container">
            <h1>Добавление нового решения</h1>

            <div class="row">
                <div class="col-lg-6">
                    <form>
                        <fieldset>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Категории</label>
                                <input type="theme" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Введите тему вопроса">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Название</label>
                                <input type="theme" class="form-control" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Введите название">
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea">Описание</label>
                                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Логотип</label>
                                <div class="row col__plan align-items-center">
                                    <div class="col-lg-2 plan__p">Выберите изображение</div>
                                    <div class="col-lg-5 ml-auto">
                                        <button type="button"
                                                class="btn btn-primary rounded-0 plan__btn">
                                            Загрузить
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Файл контейнера</label>
                                <div class="row col__plan align-items-center">
                                    <div class="col-lg-2 plan__p">Выберите файл</div>
                                    <div class="col-lg-5 ml-auto">
                                        <button type="button"
                                                class="btn btn-primary rounded-0 plan__btn">
                                            Загрузить
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                    <form action="add_plus.html">
                        <button type="submit" class="btns btn-primary rounded-0"
                                style="margin-top: 30px;">
                            Далее
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>